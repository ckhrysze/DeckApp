<% content_for :head do %>
    <title><%= @deck.name %></title>
    <%= javascript_include_tag 'jquery-1.3.2', 'ba-debug.min' %>
    <%= stylesheet_link_tag 'reset-fonts', 'layout' %>
<% end %>

<% cols = 6 %>

<% content_for :main do %>
      <div id="deck_formats" >
        Copy/Paste formats
        <ul>
          <li>Autocard/wiki</li>
        </ul>

        Downloadable formats
        <ul>
          <li><a href=""><%= @deck.name %>.xml</a></li>
          <li><a href=""><%= @deck.name %>.dec</a></li>
        </ul>
      </div>
<% end %>

<% content_for :left do %>
      <div id="deck_list">
        <table class="section">
          <tr id="decklist_header">
            <td>Type</td>
            <td>Count</td>
            <td>Name</td>
            <td>CC</td>
            <td>CMC</td>
            <td>&nbsp;</td>
          </tr>

          <tr id="land_header">
            <td>Lands</td>
          </tr>
          <%= render :partial => "run_rows",
                :locals => {:runs => @deck.maindeck.lands, :classes => ['maindeck'] } %>
          <tr id="blank_land_row" />

          <tr id="creature_header">
            <td>Creatures</td>
          </tr>
          <%= render :partial => "run_rows",
                :locals => {:runs => @deck.maindeck.creatures, :classes => ['maindeck', 'nonland'] } %>
          <tr id="blank_creature_row" />

          <tr id="spell_header">
            <td>Spells</td>
          </tr>
          <%= render :partial => "run_rows",
                :locals => {:runs => @deck.maindeck.spells, :classes => ['maindeck', 'nonland'] } %>
          <tr id="blank_spell_row" />

          <tr>
              <td>Total</td>
              <td id="total_cards"></td>
          </tr>
        </table>
      </div>
<% end %>

<% content_for :right do %>
      <div id="deck_stats" class="section">
        <img id="mana_curve" alt="mana curve chart" />
      </div>
<% end %>
